{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017",
    "jsx": "react",
    "allowJs": true,
    "checkJs": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noEmitOnError": false,
    "outDir": "./dist",
    "paths": {
      "@odf/shared": ["./packages/shared/src"],
      "@odf/shared/*": ["./packages/shared/src/*"],
      "packages/shared": ["./packages/shared/src"],
      "packages/shared/*": ["./packages/shared/src/*"]
    },
    "types": ["./index"]
  },
  "exclude": [
    "**/*/build",
    "**/*/node_modules",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "include": ["packages"]
}
